@using Stimulsoft.Report.Mvc;
@using Stimulsoft.System.Web.UI.WebControls;

@{
    ViewBag.Title = "Stimulsoft Reports.Web DemoFx";
}

@Html.StiNetCoreViewerFx("StiMvcViewerFx1", new StiNetCoreViewerFxOptions()
{
    Actions =
    {
        GetReport = "GetReport",
        ViewerEvent = "ViewerEvent",
        DesignReport = "Design"
    },
    Appearance =
    {
        BackgroundColor = System.Drawing.Color.FromArgb(0xe8, 0xe8, 0xe8)
    },
    Toolbar =
    {
        ShowDesignButton = true
    },
    Width = Unit.Percentage(100),
    Height = Unit.Percentage(100)
})